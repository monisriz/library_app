<!-- search box -->

<div class="searchBox">
  <input class="form-control form-control-lg" id="txtBookSearch" type="text" placeholder="Search">
</div>
<h2 id="searchHeading">Search result:</h2>

<form action="" method="POST" id="addForm" class="descForm">
  <input type="text" name="descTitle" class="descResult" id="descTitle">
  <input type="text" name="descAuthor" class="descResult" id="descAuthor">
  <input type="text" name="descYear" class="descResult" id="descYear">
  <input type="text" name="descDescription" class="descResult" id="descDescription">
  <input type="text" name="descIsbn" class="descResult" id="descIsbn">
  <input type="text" name="descGenre" class="descResult" id="descGenre">
  <input type="text" name="descCover" class="descResult" id="descCover">
  <div id="divDescription"></div>
  <button type="submit" class="btn btn-primary" id="addBtn">Add to library</button>
  <hr>
</form>

<div class="welcomeDiv" style="display: flex; justify-content: flex-end; margin-right: 2em;">
  <h4>Hello  {{name}}</h4>

</div>
<form action="/logout" style="display: flex; justify-content: flex-end; margin-right: 2em;"><button class="btn btn-warning" type="submit">Logout</button></form>
<div class="message">{{message}}</div>
  {{#if lib_items}}
{{#each lib_items}}
<div class="libItems">
<div class="bookDiv row">
  <div class="col-lg-3">
    <img src={{cover}}>
  </div>
  <div class="col-lg-6">
    <div class="row bookTitle">
      <div class="col">
        <h3><strong>{{title}}</strong></h3>
      </div>
    </div>
    <div class="row bookAuthor">
      <div class="col">
        <h4>by {{author}}</h4>
      </div>
    </div>
  </div>
    <!-- Button trigger modal -->
    <div class="itemBtns">
      <button type="button" class="btn btn-primary descBtn" data-toggle="modal" data-target="#{{book_id}}">
        Read description
      </button>
        <button class="btn btn-danger" id="btn-confirm">Delete</button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id='{{book_id}}' tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"><strong>{{title}}</strong> - <em>{{author}}</em></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            {{description}}
          </div>
          <div class="modal-footer" style="justify-content: center">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <!-- delete confirmation -->
    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="delModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel"><strong>{{title}}</strong> - <em>{{author}}</em></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer" style="justify-content: center">
        <form action="/delete/{{book_id}}" method="POST">
          <button type="submit" class="btn btn-danger" id="modal-btn-yes">Delete</button>
        </form>
        <button type="button" class="btn btn-warning" id="modal-btn-no">Cancel</button>
      </div>
    </div>
  </div>
</div>



</div>
<hr>

</div>
{{/each}}
{{else}}
<div class="emptyLib"><h2>Add books to your library</h2></div>
{{/if}}
